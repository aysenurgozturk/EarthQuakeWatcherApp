<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconInfo"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

            <TextView
                android:id="@+id/winTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/iconInfo"
                android:text="Hello"
                />

            <TextView
                android:id="@+id/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iconInfo"
                android:layout_below="@+id/winTitle"
                android:text="Magnitude"
                />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/magnitude"
                android:layout_marginLeft="39dp"
                android:layout_marginBottom="-16dp"
                android:layout_toRightOf="@+id/magnitude"
                android:background="@android:color/transparent"
                android:text="More Info..."
                android:textColor="#FF5A5A" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>